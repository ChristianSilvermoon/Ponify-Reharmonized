{
    "content_scripts": [
        {
            "exclude_globs": [],
            "include_globs": [
                "*"
            ],
            "run_at": "document_end",
            "js": [
                "src/replace.js"
            ],
            "all_frames": true,
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "img/rh16.png",
        "default_popup": "popup.htm",
        "default_title": "Ponify"
    },
    "icons": {
        "16": "img/rh16.png",
        "48": "img/rh48.png"
    },
    "manifest_version": 2,
    "name": "Ponify Reharmonized",
    "background": {
        "scripts": [
            "src/init.js",
            "src/background.js"
        ],
        "persistent": true
    },
    "version": "19.1.13",
    "description": "Ponify is a tool for replacing all human words with a ponified variations",
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}
